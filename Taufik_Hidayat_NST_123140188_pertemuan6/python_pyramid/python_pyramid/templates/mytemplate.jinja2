{% extends "layout.jinja2" %}

{% block content %}
<div class="glass-panel">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <div>
            <h1>Kurikulum</h1>
            <p class="subtitle">Daftar Matakuliah Semester Genap</p>
        </div>
        <a href="{{ request.route_url('add_course') }}" class="btn btn-primary">
            + Tambah Data
        </a>
    </div>

    {% if courses %}
    <table>
        <thead>
            <tr>
                <th width="15%">Kode</th>
                <th width="30%">Nama Matakuliah</th>
                <th width="10%">SKS</th>
                <th width="30%">Deskripsi</th>
                <th width="15%" style="text-align: right;">Aksi</th>
            </tr>
        </thead>
        <tbody>
            {% for course in courses %}
            <tr>
                <td style="font-weight: 600; color: var(--accent-color);">{{ course.kode }}</td>
                <td style="font-weight: 500;">{{ course.nama }}</td>
                <td><span class="tag">{{ course.sks }} SKS</span></td>
                <td style="color: var(--text-secondary); font-size: 14px;">{{ course.deskripsi }}</td>
                <td style="text-align: right;">
                    <div style="display: flex; gap: 8px; justify-content: flex-end;">
                        <a href="{{ request.route_url('edit_course', id=course.id) }}" class="btn btn-secondary" style="padding: 8px 16px; font-size: 13px;">Edit</a>
                        <a href="{{ request.route_url('delete_course', id=course.id) }}" class="btn btn-danger" style="padding: 8px 16px; font-size: 13px; background: transparent;" onclick="return confirm('Yakin ingin menghapus?');">Hapus</a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <div style="text-align: center; padding: 60px 20px;">
        <p style="font-size: 18px; color: #86868b; margin-bottom: 20px;">Belum ada data matakuliah.</p>
        <a href="{{ request.route_url('add_course') }}" class="btn btn-primary">Buat Matakuliah Pertama</a>
    </div>
    {% endif %}
</div>
{% endblock %}