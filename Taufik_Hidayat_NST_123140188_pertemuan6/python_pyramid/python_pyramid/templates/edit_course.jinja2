{% extends "layout.jinja2" %}

{% block content %}
<div class="glass-panel" style="max-width: 600px; margin: 0 auto;">
    <h2>Edit Matakuliah</h2>
    <p class="subtitle">Perbarui informasi untuk kode <strong>{{ course.kode }}</strong>.</p>

    <form action="{{ request.route_url('edit_course', id=course.id) }}" method="POST">
        
        <div class="form-group">
            <label for="kode">Kode Matakuliah</label>
            <input type="text" name="kode" value="{{ course.kode }}" required>
        </div>

        <div class="form-group">
            <label for="nama">Nama Matakuliah</label>
            <input type="text" name="nama" value="{{ course.nama }}" required>
        </div>

        <div class="form-group">
            <label for="sks">Jumlah SKS</label>
            <input type="number" name="sks" value="{{ course.sks }}" min="1" max="6" required>
        </div>

        <div class="form-group">
            <label for="deskripsi">Deskripsi</label>
            <textarea name="deskripsi" rows="4">{{ course.deskripsi }}</textarea>
        </div>

        <div style="margin-top: 40px; display: flex; gap: 15px;">
            <button type="submit" class="btn btn-primary" style="flex: 1; font-size: 16px;">Simpan Perubahan</button>
            <a href="{{ request.route_url('home') }}" class="btn btn-secondary">Batal</a>
        </div>
    </form>
</div>
{% endblock %}